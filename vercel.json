{
    "version": 2,
    "github": {
        "enabled": false
    },
    "builds": [
        {
            "src": "apps/backend/dist/main.js",
            "use": "@vercel/node"
        },
        {
            "src": "apps/frontend/dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/dist/main.js"
        },
        {
            "src": "/(.*)\\.(js|css|png|jpg|svg|ico|json)",
            "dest": "apps/frontend/dist/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/frontend/dist/index.html"
        }
    ]
}