{
    "version": 2,
    "builds": [
        {
            "src": "apps/backend/src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "apps/frontend/dist/**",
            "use": "@vercel/static-build"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/backend/src/main.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/frontend/dist/index.html"
        }
    ]
}