{
    "version": 2,
    "builds": [
        {
            "src": "apps/backend/src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "apps/frontend/dist/**",
            "use": "@vercel/static-build",
            "config": {
                "outputDirectory": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "apps/backend/src/main.ts"
        },
        {
            "src": "/(.*)",
            "dest": "apps/frontend/dist/index.html"
        }
    ]
}